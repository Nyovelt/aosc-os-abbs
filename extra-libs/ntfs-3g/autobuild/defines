PKGNAME=ntfs-3g
PKGSEC=admin
PKGDEP="util-linux fuse gnutls attr libgcrypt libconfig"
BUILDDEP="ntfs-3g"
PKGDES="NTFS filesystem driver and utilities"

AUTOTOOLS_AFTER="--disable-static \
                 --disable-ldconfig \
                 --with-fuse=external \
                 --exec-prefix=/ \
                 --enable-posix-acls \
                 --enable-crypto \
                 --enable-extras \
                 --enable-quarantined"
PKGEPOCH=1
