abinfo "Setting TIMESTAMP var ..."
if [[ "$ARCH" = "amd64" ]]; then
	export __TIMESTAMP="${__TIMESTAMP_AMD64}"
elif [[ "$ARCH" = "arm64" ]]; then
	export __TIMESTAMP="${__TIMESTAMP_ARM64}"
fi

abinfo "Generating Visual Studio Code downloader (as postinst) ..."
sed -e "s|@PKGVER@|${PKGVER}|g" \
    -e "s|@TIMESTAMP@|${__TIMESTAMP}|g" \
    -e "s|@ARCH@|${ARCH}|g" \
    "$SRCDIR"/autobuild/postinst.in \
    > "$SRCDIR"/autobuild/postinst
