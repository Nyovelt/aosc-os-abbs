# This command is adopted from Arch Linux's elvish.install
# Reference: 
# https://github.com/archlinux/svntogit-community/blob/packages/elvish/trunk/elvish.install
if [ $1 = 'remove' ]; then
    echo "Attempting to purge elvish from /etc/shells ..."
    sed -i -r '/^(\/usr)?\/bin\/elvish$/d' /etc/shells && \
    echo "Update complete."
fi
